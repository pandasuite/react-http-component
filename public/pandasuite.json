{
    "version": "2.0.0",
    "main": "",
  
    "system": {
      "localization": false,
      "markers": false
    },

    "properties": [
      {
        "id": "url",
        "name": "URL",
        "locale_name": {
          "fr_FR": "URL"
        },
        "type": "String",
        "bindable": true
      },
      {
        "id": "method",
        "name": "Method",
        "locale_name": {
          "fr_FR": "Method"
        },
        "type": "Dropdown",
        "value": "GET",
        "items": [
          {
            "id": "GET",
            "name": "GET"
          },
          {
            "id": "POST",
            "name": "POST"
          },
          {
            "id": "HEAD",
            "name": "HEAD"
          },
          {
            "id": "PUT",
            "name": "PUT"
          },
          {
            "id": "PATCH",
            "name": "PATCH"
          },
          {
            "id": "DEL",
            "name": "DELETE"
          }
        ],
        "bindable": true
      },
      {
        "id": "contentType",
        "name": "Content Type",
        "locale_name": {
          "fr_FR": "Type de contenu"
        },
        "type": "Dropdown",
        "value": "application/json",
        "items": [
          {
            "id": "text/plain",
            "name": "Text (text/plain)"
          },
          {
            "id": "application/json",
            "name": "JSON (application/json)"
          },
          {
            "id": "application/xml",
            "name": "XML (application/xml)"
          },
          {
            "id": "text/xml",
            "name": "XML (text/xml)"
          },
          {
            "id": "text/html",
            "name": "HTML (text/html)"
          }
        ],
        "bindable": true,
        "separator": true,
        "hidden": "properties.method.value != 'POST' && properties.method.value != 'PUT' && properties.method.value != 'PATCH'"
      },
      {
        "id": "content",
        "name": "Content",
        "locale_name": {
          "fr_FR": "Contenu"
        },
        "type": "Code",
        "language": "json",
        "options": {
          "minimap": {
            "enabled": false
          }
        },
        "bindable": true,
        "hidden": "properties.method.value != 'POST' && properties.method.value != 'PUT' && properties.method.value != 'PATCH'"
      },
      {
        "id": "cache",
        "type": "Dropdown",
        "value": "none",
        "items": [
          {
            "id": "none",
            "name": "No cache",
            "locale_name": {
              "fr_FR": "Aucun cache"
            }    
          },
          {
            "id": "cacheFirst",
            "name": "Cache first",
            "locale_name": {
              "fr_FR": "Cache en premier"
            }    
          },
          {
            "id": "networkAndCache",
            "name": "Network and cache",
            "locale_name": {
              "fr_FR": "Réseau et cache"
            }    
          }
        ],
        "separator": true
      },
      {
        "id": "persistent",
        "name": "Persistent cache",
        "locale_name": {
          "fr_FR": "Cache persistant"
        },
        "type": "Boolean",
        "value": false,
        "hidden": "properties.cache.value == 'none'"
      },
      {
        "id": "headers",
        "name": "Headers",
        "locale_name": {
          "fr_FR": "En-têtes"
        },
        "type": "Hash",
        "separator": true
      },
      {
        "id": "query",
        "name": "Query String",
        "locale_name": {
          "fr_FR": "Chaîne d'interrogation"
        },
        "type": "Hash",
        "separator": true
      },
      {
        "id": "basic",
        "name": "HTTP Basic authentication",
        "locale_name": {
          "fr_FR": "HTTP Basic authentication"
        },
        "type": "Boolean",
        "value": false,
        "style": "switch",
        "separator": true
      },
      {
        "id": "user",
        "name": "User Name",
        "locale_name": {
          "fr_FR": "Nom d'utilisateur"
        },
        "type": "String",
        "bindable": true,
        "disabled": "!properties.basic.value"
      },
      {
        "id": "password",
        "name": "Password",
        "locale_name": {
          "fr_FR": "Mot de passe"
        },
        "type": "String",
        "bindable": true,
        "disabled": "!properties.basic.value"
      },
      {
        "id": "keys",
        "hidden": true
      },
      {
        "id": "pagination",
        "type": "Boolean",
        "value": false,
        "hidden": true
      }
    ],
  
    "events": [
      {
        "id": "requestCompleted",
        "name": "Request completed",
        "locale_name": {
          "fr_FR": "Requête complétée"
        }
      },
      {
        "id": "requestFailed",
        "name": "Request failed",
        "locale_name": {
          "fr_FR": "Requête rejetée"
        }
      }
    ],
  
    "actions": [
      {
        "id": "start",
        "name": "Start request",
        "locale_name": {
          "fr_FR": "Lancer la requête"
        },
        "params": [
          {
            "id": "loop",
            "name": "Loop on all pages",
            "locale_name": {
              "fr_FR": "Boucle sur toutes les pages"
            },
            "type": "Boolean",
            "value": false,
            "hidden": "!properties.pagination.value"
          },
          {
            "id": "content",
            "name": "Content",
            "locale_name": {
              "fr_FR": "Contenu"
            },
            "type": "Code",
            "language": "json",
            "options": {
              "minimap": {
                "enabled": false
              }
            },
            "bindable": true,
            "hidden": true
          }
        ]
      },
      {
        "id": "clearCache",
        "name": "Clear cache",
        "locale_name": {
          "fr_FR": "Supprimer le cache"
        }
      },
      {
        "id": "redoRequests",
        "name": "Redo rejected requests",
        "locale_name": {
          "fr_FR": "Refaire les requêtes rejetées"
        }
      },
      {
        "id": "nextPage",
        "name": "Next page",
        "locale_name": {
          "fr_FR": "Page suivante"
        }
      },
      {
        "id": "prevPage",
        "name": "Previous page",
        "locale_name": {
          "fr_FR": "Page précédente"
        }
      }
    ]
}
  